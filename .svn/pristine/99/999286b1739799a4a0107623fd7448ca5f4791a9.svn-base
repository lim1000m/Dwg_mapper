.loadmask {
    z-index: 100;
    position: absolute;
    top:0;
    left:0;
    -moz-opacity: 0.5;
    opacity: .50;
    filter: alpha(opacity=50);
    background-color: #000;
    width: 100%;
    height: 100%;
    zoom: 1;
 }
.loadmask-msg {
    z-index: 20001;
    position: absolute;
    top: 0;
    left: 0;
    -moz-opacity: 0.7;
    opacity: .70;
    filter: alpha(opacity=70);
    border:0px solid #6593cf;
    background: #000;
    padding:2px;
}
.loadmask-msg div {
	padding:8px 15px 8px 33px;
	background: #000 url('../../images/common/loading.gif') no-repeat 10px 50%;
	line-height: 16px;
	border:1px solid #ccc;
	color:#fff;
	font:normal 12px arial, helvetica, sans-serif;
	cursor:wait;
}
.masked {
    overflow: hidden !important;
}
.masked-relative {
    position: relative !important;
}
.masked-hidden {
    visibility: hidden !important;
}